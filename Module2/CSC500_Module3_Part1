def meal_total():
    # Asking user for the cost
    meal_total = float(input("Enter the charge for the food: $"))

    # Calculating the tip
    tip = meal_total * 0.18

    # Calculate sales tax
    tax = meal_total * 0.07

    # Calculate total
    total = meal_total + tip + tax

    # Display the calculated amounts
    # .2f allows for exactly 2 decimal points and will always be shown as a float
    print(f"Total cost of meal: ${meal_total:.2f}")
    print(f"Tip (18%): ${tip:.2f}")
    print(f"Sales Tax (7%): ${tax:.2f}")
    print(f"Total Amount: ${total:.2f}")

# Calling the function
meal_total()
